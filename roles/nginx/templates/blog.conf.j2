server {
    listen 8082;
    server_name blog.{{ domain }};

    access_log /var/log/nginx/blog_bingops_access.log;
    error_log /var/log/nginx/blog_bingops_error.log;

    root /var/www/html/blog.bingops.com/;
    index index.html index.htm index.nginx-debian.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /stub_status {
        stub_status;
        allow 127.0.0.1;
        deny all;
    }
}
